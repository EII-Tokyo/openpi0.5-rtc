FROM nvidia/cuda:13.0.0-runtime-ubuntu22.04

ENV DEBIAN_FRONTEND=noninteractive
ENV CUBLAS_WORKSPACE_CONFIG=:16:8
ENV CUDA_LAUNCH_BLOCKING=1

RUN apt-get update && apt-get install -y --no-install-recommends \
    python3 \
    python3-pip \
    python3-dev \
    ffmpeg \
    && rm -rf /var/lib/apt/lists/*

ARG TORCH_INDEX_URL=https://download.pytorch.org/whl/nightly/cu130
RUN pip3 install --no-cache-dir --upgrade pip
RUN pip3 install --no-cache-dir --pre torch --index-url ${TORCH_INDEX_URL}
RUN pip3 install --no-cache-dir openai-whisper

WORKDIR /app
COPY whisper_bench.py /app/whisper_bench.py

CMD ["python3", "/app/whisper_bench.py"]
