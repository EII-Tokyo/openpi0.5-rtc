{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "JAX_DISABLE_JIT": "1",
                "JAX_DEBUG_NANS": "True"
            },
            "justMyCode": false
        },
        {
            "name": "Debug: Value Server",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/value_server.py",
            "console": "integratedTerminal",
            "args": [
                "--checkpoint", "${input:checkpointPath}",
                "--host", "0.0.0.0",
                "--port", "8001"
            ],
            "env": {
                "JAX_DEBUG_NANS": "True"
            },
            "justMyCode": false
        },
        {
            "name": "Debug: Value Server (no JIT)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/value_server.py",
            "console": "integratedTerminal",
            "args": [
                "--checkpoint", "${input:checkpointPath}",
                "--host", "0.0.0.0",
                "--port", "8001"
            ],
            "env": {
                "JAX_DISABLE_JIT": "1",
                "JAX_DEBUG_NANS": "True"
            },
            "justMyCode": false
        }
    ],
    "inputs": [
        {
            "id": "checkpointPath",
            "type": "promptString",
            "description": "Path to checkpoint directory (e.g. /path/to/checkpoints/1000)"
        }
    ]
}
